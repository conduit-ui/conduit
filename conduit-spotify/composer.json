{
    "name": "jordanpartridge/conduit-spotify",
    "description": "Spotify integration component for Conduit - Control music during development workflows",
    "keywords": ["conduit", "conduit-component", "spotify", "music", "cli", "developer-tools"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Jordan Partridge",
            "email": "jordan@jordanpartridge.us"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^11.0",
        "illuminate/console": "^11.0",
        "guzzlehttp/guzzle": "^7.0",
        "laravel-zero/framework": "^11.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "JordanPartridge\\ConduitSpotify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JordanPartridge\\ConduitSpotify\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JordanPartridge\\ConduitSpotify\\SpotifyServiceProvider"
            ]
        },
        "conduit": {
            "component": {
                "name": "spotify",
                "description": "Spotify music control and playlist management",
                "version": "1.0.0",
                "activation": {
                    "events": ["coding.start", "git.working", "time.work_hours"],
                    "exclude_events": ["meeting.active"],
                    "always_active": false
                },
                "commands": [
                    "spotify:play",
                    "spotify:pause", 
                    "spotify:skip",
                    "spotify:current",
                    "spotify:playlists",
                    "spotify:focus"
                ],
                "config": {
                    "client_id": null,
                    "client_secret": null,
                    "redirect_uri": "http://localhost:8888/callback",
                    "scopes": [
                        "user-read-playback-state",
                        "user-modify-playback-state", 
                        "user-read-currently-playing",
                        "playlist-read-private",
                        "playlist-modify-public",
                        "playlist-modify-private"
                    ]
                }
            }
        }
    }
}