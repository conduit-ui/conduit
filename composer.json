{
    "name": "conduit-ui/conduit",
    "description": "Your personal developer API gateway - Extensible GitHub CLI with component-based architecture",
    "keywords": ["github", "cli", "laravel-zero", "developer-tools", "component-system", "api-gateway"],
    "homepage": "https://github.com/conduit-ui/conduit",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Jordan Partridge",
            "email": "jordan.l.partridge@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "chillerlan/php-qrcode": "^5.0",
        "guzzlehttp/guzzle": "^7.8",
        "illuminate/database": "^11.45",
        "jordanpartridge/github-client": "^2.9",
        "laravel-zero/framework": "^11.36.1",
        "symfony/filesystem": "^7.3",
        "symfony/process": "^6.0|^7.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.6",
        "laravel-zero/phar-updater": "^1.3",
        "laravel/pint": "^1.18.3",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "^3.7.1",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest",
        "test:coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "./vendor/bin/pest --coverage"
        ],
        "test:coverage:html": [
            "@putenv XDEBUG_MODE=coverage",
            "./vendor/bin/pest --coverage-html=build/coverage"
        ],
        "post-install-cmd": [
            "@php conduit system:sync-components --silent || true"
        ],
        "post-update-cmd": [
            "@php conduit system:sync-components --silent || true"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": ["conduit"]
}
