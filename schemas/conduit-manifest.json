{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Conduit Component Manifest",
  "description": "Manifest file for Conduit CLI components",
  "type": "object",
  "required": ["namespace", "name", "description", "version", "commands"],
  "properties": {
    "namespace": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$",
      "minLength": 2,
      "maxLength": 20,
      "description": "Unique namespace for component commands (e.g., 'env', 'spotify', 'github')"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50,
      "description": "Human-readable component name"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200,
      "description": "Brief description of component functionality"
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
      "description": "Semantic version of the component"
    },
    "commands": {
      "type": "array",
      "minItems": 1,
      "maxItems": 20,
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9-]*(?::[a-z][a-z0-9-]*)*$",
        "description": "Command name relative to namespace (e.g., 'play', 'queue', 'pr:create')"
      },
      "description": "List of commands provided by this component"
    },
    "min_conduit_version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$",
      "description": "Minimum required Conduit version"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "Required component namespaces"
      },
      "description": "Other component namespaces this component depends on"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "description": "Tags for categorizing the component"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["name"]
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Component homepage URL"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "Repository URL"
    },
    "license": {
      "type": "string",
      "description": "SPDX license identifier"
    }
  },
  "additionalProperties": false
}